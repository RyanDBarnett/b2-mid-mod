<ul>
  <% @flights.each do |flight| %>
    <li><%= flight.number %></li>
      <% unless flight.passengers.empty? %>
        <ul class="flight-<%= flight.number %>-passengers">
          <% flight.passengers.each do |passenger| %>
            <li><%= passenger.name %><%= link_to 'Cancel Flight', "/passenger_flights/#{flight.passenger_flights.where(passenger_id: passenger.id).first.id}", method: "delete" %></li>
          <% end %>
        </ul>
      <% end %>
  <% end %>
</ul>
